{%  extends 'base.html.twig' %}

{% block title %} Starshop: Beam up some parts!{% endblock %}

{% block body %}
<h1>Starshop: our monoply-busting option for starship parts!</h1>

<div>
    Browse through {{ ships|length}} starships!

    {% if ships|length > 2 %}
        <p>
            {# Do you think "shiploads" will pass the legal team? #}
            That's a shipload of ships!
        </p>


    {% endif %}
</div>

<div>
    <h2> My Ship</h2>

    <table>
        <tr>
            <th>Name</th>
            <th>
                <a href="{{ path('app_starship_show', {id: myShip.id}) }}">{{ myShip.name }}
                </a>
            </th>
        </tr>

        <tr>
            <th>Class</th>
            <td>
                {{ myShip.class }}
            </td>
        </tr>

        <tr>
            <th>Captain</th>
            <td>{{ myShip.captain }}</td>
        </tr>

        <tr>
            <th>Status</th>
            <td>{{ myShip.status }}</td>
        </tr>
    </table>

</div>
{% endblock %}