{%  extends 'base.html.twig' %}

{% block title %} Starshop: Beam up some parts!{% endblock %}

{% block body %}
<h1>Starshop: our monoply-busting option for starship parts!</h1>

<div>
    Browse through {{ numberOfStarships }} starships!

    {% if numberOfStarships > 400 %}
        <p>
            {# Do you think "shiploads" will pass the legal team? #}
            That's a shipload of ships!
        </p>


    {% endif %}
</div>

<div>
    <h2> My Ship</h2>

    <table>
        <tr>
            <th>Name</th>
            <th>{{ myShip.name }}</th>
        </tr>

        <tr>
            <th>Class</th>
            <th>{{ myShip.class }}</th>
        </tr>

        <tr>
            <th>Captain</th>
            <th>{{ myShip.captain }}</th>
        </tr>

        <tr>
            <th>Status</th>
            <th>{{ myShip.status }}</th>
        </tr>
    </table>

</div>
{% endblock %}